@model List<Album>

@{
    ViewData["Title"] = "My Albums";
}

@section Header {
    @await Html.PartialAsync("_HeaderPartial", "My Albums")
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6 col-md-4 col-lg-3 mb-3">
            <div class="card">
                <img class="card-img-top img-fluid" style="height: 200px" src="@item.Images?.FirstOrDefault()?.Path" alt="@item.Name">
                <div class="card-body">
                    <p class="card-text">
                        @item.Description
                    </p>
                </div>
            </div>
        </div>
    }
</div>