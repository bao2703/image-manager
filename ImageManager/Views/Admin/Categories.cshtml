@model List<Category>
@{
    ViewData["Title"] = "Categories";
}
<div class="card mt-3">
    <div class="card-header">
        <strong>Categories List</strong>
        <span class="float-right">
            <a class="btn btn-outline-primary btn-sm" asp-action="CreateCategory">
                Create
            </a>
        </span>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Date Created</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.DateCreated?.ToString("d MMM yyyy")</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="EditCategory" asp-route-id="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-outline-danger btn-sm" asp-action="DeleteCategory" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>